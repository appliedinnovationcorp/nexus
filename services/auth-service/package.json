{
  "name": "@nexus/auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice with JWT, OAuth, and multi-factor authentication",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t nexus/auth-service .",
    "docker:run": "docker run -p 8001:8001 nexus/auth-service"
  },
  "dependencies": {
    "@nexus/domain-models": "workspace:*",
    "@nexus/observability": "workspace:*",
    "@nexus/security": "workspace:*",
    "fastify": "^4.28.1",
    "fastify-cors": "^6.1.0",
    "fastify-helmet": "^11.1.1",
    "fastify-jwt": "^8.0.1",
    "fastify-rate-limit": "^9.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-github2": "^0.1.12",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.4",
    "nodemailer": "^6.9.15",
    "redis": "^4.7.0",
    "mongoose": "^8.8.3",
    "zod": "^3.23.8",
    "winston": "^3.15.0",
    "prometheus-client": "^15.1.3"
  },
  "devDependencies": {
    "@nexus/typescript-config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-github2": "^1.2.9",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/nodemailer": "^6.4.19",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2",
    "eslint": "^8.57.1",
    "supertest": "^7.0.0"
  },
  "keywords": [
    "authentication",
    "authorization",
    "jwt",
    "oauth",
    "microservice",
    "fastify",
    "security"
  ]
}
