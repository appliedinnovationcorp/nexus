    "@nexus/typescript-config": "workspace:*",
    "@types/node": "^22.10.1",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2",
    "eslint": "^8.57.1",
    "supertest": "^7.0.0"
  },
  "keywords": [
    "ai",
    "inference",
    "machine-learning",
    "rag",
    "vector-database",
    "model-serving",
    "openai",
    "anthropic",
    "huggingface"
