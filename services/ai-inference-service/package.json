{
  "name": "@nexus/ai-inference-service",
  "version": "1.0.0",
  "description": "AI model serving service with RAG integration, model management, and inference optimization",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t nexus/ai-inference-service .",
    "docker:run": "docker run -p 8003:8003 nexus/ai-inference-service"
  },
  "dependencies": {
    "@nexus/domain-models": "workspace:*",
    "@nexus/event-bus": "workspace:*",
    "@nexus/observability": "workspace:*",
    "@nexus/security": "workspace:*",
    "fastify": "^4.28.1",
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/multipart": "^8.0.0",
    "openai": "^4.67.3",
    "@anthropic-ai/sdk": "^0.27.3",
    "@huggingface/inference": "^2.8.1",
    "langchain": "^0.3.5",
    "@langchain/openai": "^0.3.12",
    "@langchain/anthropic": "^0.3.7",
    "@langchain/community": "^0.3.12",
    "chromadb": "^1.9.2",
    "pinecone-client": "^2.0.0",
    "weaviate-ts-client": "^2.2.0",
    "tiktoken": "^1.0.17",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.8.0",
    "sharp": "^0.33.5",
    "redis": "^4.7.0",
    "bullmq": "^4.0.0",
