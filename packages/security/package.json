{
  "name": "@nexus/security",
  "version": "1.0.0",
  "description": "Comprehensive security package with OPA policies, Vault integration, scanning, and compliance tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "scan": "ts-node src/cli/scanner.ts",
    "policies": "ts-node src/cli/policies.ts"
  },
  "dependencies": {
    "@nexus/domain-models": "workspace:*",
    "@nexus/observability": "workspace:*",
    "@open-policy-agent/opa-wasm": "^1.8.0",
    "node-vault": "^0.10.2",
    "helmet": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "rate-limiter-flexible": "^5.0.3",
    "express-rate-limit": "^7.4.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "snyk": "^1.1293.1",
    "retire": "^5.2.4",
    "eslint-plugin-security": "^3.0.1",
    "sonarjs": "^1.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@nexus/typescript-config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/speakeasy": "^2.0.10",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/uuid": "^10.0.0",
    "@types/node": "^22.10.1",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.8.2",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "security",
    "opa",
    "vault",
    "policies",
    "scanning",
    "compliance",
    "authentication",
    "authorization",
    "encryption"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nexus.git",
    "directory": "packages/security"
