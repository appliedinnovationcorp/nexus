{
  "name": "aic-consultant-app",
  "version": "1.0.0",
  "description": "AIC Consultant Mobile App - Employee productivity and project management",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:ios": "expo build:ios",
    "build:android": "expo build:android",
    "publish": "expo publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "detox test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "expo": "~49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@expo/vector-icons": "^13.0.0",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/drawer": "^6.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "@tanstack/react-query": "^4.32.6",
    "zustand": "^4.4.1",
    "react-hook-form": "^7.45.4",
    "native-base": "^3.4.28",
    "react-native-svg": "13.9.0",
    "expo-secure-store": "~12.3.1",
    "expo-local-authentication": "~13.4.1",
    "expo-notifications": "~0.20.1",
    "expo-location": "~16.1.0",
    "expo-camera": "~13.4.2",
    "expo-document-picker": "~11.5.4",
    "expo-file-system": "~15.4.4",
    "expo-sharing": "~11.5.0",
    "expo-speech": "~11.3.0",
    "expo-av": "~13.4.1",
    "react-native-chart-kit": "^6.12.0",
    "react-native-calendars": "^1.1302.0",
    "react-native-modal": "^13.0.1",
    "react-native-toast-message": "^2.1.6",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-super-grid": "^4.9.6",
    "react-native-draggable-flatlist": "^4.0.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@types/lodash": "^4.14.195",
    "typescript": "^5.1.3",
    "jest": "^29.2.1",
    "jest-expo": "~49.0.0",
    "@testing-library/react-native": "^12.2.2",
    "@testing-library/jest-native": "^5.4.2",
    "detox": "^20.10.2",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-native": "^4.0.0"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": ["@testing-library/jest-native/extend-expect"],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "android.emu.debug": {
        "device": "emulator",
        "app": "android.debug"
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 14"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_4_API_30"
        }
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/AICConsultant.app"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk"
      }
    }
  },
  "expo": {
    "name": "AIC Consultant",
    "slug": "aic-consultant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aic.consultant",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan documents and capture photos for project documentation.",
        "NSMicrophoneUsageDescription": "This app uses microphone to record voice notes and audio memos.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to track time spent at client sites and for expense reporting.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e40af"
      },
      "package": "com.aic.consultant",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#1e40af"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
