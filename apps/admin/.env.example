# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexus
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=5000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/api/auth/oauth/google

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3002/api/auth/oauth/github

# AWS Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=nexus-storage
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Realtime WebSocket
NEXT_PUBLIC_REALTIME_URL=ws://localhost:3001/realtime
NEXT_PUBLIC_REALTIME_API_KEY=your-realtime-api-key

# Edge Functions
DENO_DEPLOY_TOKEN=your-deno-deploy-token
DENO_DEPLOY_API=https://api.deno.com/v1

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@nexus.com

# Analytics (Optional)
ANALYTICS_API_KEY=your-analytics-api-key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Development
NODE_ENV=development
PORT=3002
HOSTNAME=localhost
